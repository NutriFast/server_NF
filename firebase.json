{
  "functions": [
    {
      "source": ".",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ],
  "hosting": {
    "appAssociation": "AUTO",
    "public": "public",
    "rewrites": [{
      "source": "/**",
      "function": "api",
      "dynamicLinks": true
    }]
  }
}
